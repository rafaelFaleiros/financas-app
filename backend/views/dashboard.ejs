<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Dashboard</title>
  <link rel="stylesheet" href="/css/style.css">
  <!-- JustGage e Raphael -->
  <script src="https://cdn.jsdelivr.net/npm/raphael"></script>
  <script src="https://cdn.jsdelivr.net/npm/justgage@1.3.5/justgage.min.js"></script>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <style>
    .gauges { display:flex; flex-wrap:wrap; gap:20px; margin-top:20px; }
    .gauge-card { width:200px; text-align:center; }
    .summary { display:flex; gap:40px; }
    .summary div { flex:1; background:#1e1e1e; padding:15px; border-radius:8px; }
    .new-tx { background:#1e1e1e; padding:15px; border-radius:8px; margin-top:30px; }
    .new-tx input, .new-tx select, .new-tx button { width:100%; margin:5px 0; }
  </style>
</head>
<body>
  <%- include('partials/header') %>
  <main style="padding:20px;">
    <div class="form-inline">
      <label for="selMonth">Mês/Ano:</label>
      <input type="month" id="selMonth">
    </div>

    <div class="summary">
      <div>
        <h3>Total Gasto</h3>
        <p id="totalSpent">R$ 0,00</p>
      </div>
      <div>
        <h3>Total Guardado</h3>
        <p id="totalSaved">R$ 0,00</p>
      </div>
    </div>

    <div class="gauges" id="gaugesContainer"></div>

    <section class="new-tx">
      <h3>Adicionar Transação</h3>
      <input type="date"    id="newDate">
      <input type="text"    id="newHistory" placeholder="Histórico">
      <input type="text"    id="newDesc"    placeholder="Descrição">
      <input type="number"  step="0.01" id="newValue" placeholder="Valor">
      <select id="newCat"><option value="">— Categoria —</option></select>
      <button id="btnAddTx">Adicionar</button>
    </section>
  </main>
  <script src="/js/dashboard.js"></script>
</body>
</html>
