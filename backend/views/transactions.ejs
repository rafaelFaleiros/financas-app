<!DOCTYPE html><html lang="pt-BR"><head>
    <meta charset="UTF-8"><title>Minhas Transações</title>
    <link rel="stylesheet" href="/css/style.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    </head><body>
      <%- include('partials/header') %>
      <main>
        <section class="card">
          <h2>Buscar / Filtrar</h2>
          <input id="filtroDesc" placeholder="Descrição">
          <select id="filtroCat"><option value="">— Categoria —</option></select>
          <input type="date" id="filtroData">
          <button id="btnFilter">Filtrar</button>
        </section>
        <section class="card">
          <h2>Todas as Transações</h2>
          <table id="allTxTable">
            <thead>
              <tr>
                <th>Data</th><th>Histórico</th><th>Descrição</th>
                <th>Valor</th><th>Saldo</th><th>Categoria</th><th>Ações</th>
              </tr>
            </thead>
            <tbody></tbody>
          </table>
        </section>
      </main>
      <script src="/js/transactions.js"></script>
    </body></html>
    